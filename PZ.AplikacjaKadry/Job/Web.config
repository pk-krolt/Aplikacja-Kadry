<?xml version="1.0"?>
<configuration>

  <location path="AdvertList.aspx">
    <system.web>
      <authorization>
        <allow users="*"/>
      </authorization>
    </system.web>
  </location>

  <location path="AddAdvert.aspx">
    <system.web>
      <authorization>
        <deny users="?"/>
        <deny roles="Worker"/>
        <allow roles="Administrator, Manager"/>
      </authorization>
    </system.web>
  </location>

  <location path="EditAdvert.aspx">
    <system.web>
      <authorization>
        <deny users="?"/>
        <deny roles="Worker"/>
        <allow roles="Administrator, Manager"/>
      </authorization>
    </system.web>
  </location>

</configuration>
